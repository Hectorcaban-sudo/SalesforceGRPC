# Salesforce Pub/Sub API Configuration
# Copy this file to .env and fill in your actual values

# Salesforce Instance URL (e.g., https://yourinstance.my.salesforce.com)
SF_INSTANCE_URL=https://yourinstance.my.salesforce.com

# Access Token or Session ID
SF_ACCESS_TOKEN=your_access_token_or_session_id_here

# Organization ID (starts with 00D)
SF_TENANT_ID=00Dxxxxxxxxxxxx

# Pub/Sub API Endpoint
# Use one of:
# - api.pubsub.salesforce.com:443 (global)
# - api.pubsub.eu01.salesforce.com:443 (EU Frankfurt)
# - api.pubsub.eu02.salesforce.com:443 (EU Ireland)
SF_PUBSUB_ENDPOINT=api.pubsub.salesforce.com:443

# Topic Name to subscribe to
# Platform events: /event/EventName__e
# Change events: /data/ObjectNameChangeEvent
SF_TOPIC_NAME=/event/YourEvent__e

# Replay Preset: LATEST, EARLIEST, or CUSTOM
SF_REPLAY_PRESET=LATEST

# Custom Replay ID (required only if ReplayPreset is CUSTOM)
# SF_REPLAY_ID=

# Number of events to request (0 for infinite stream)
SF_NUM_REQUESTED=0